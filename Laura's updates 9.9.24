body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #cbbfde;
}

#start-container, #quiz-container, #results-container {
  background-color: white;
  max-height: 60vh;
  overflow-y: auto;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  max-width: 800px;
  width: 100%;
  display: none;
}

#start-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

button {
  display: block;
  margin: 20px auto;
  padding: 20px 20px;
  background-color: #4b2e83;
  color: white;
  border: none;
  border-radius: 7px;
  cursor: pointer;
  width: 100%;
  max-width: 200px;
  font-size: 18px; 
}

button:hover {
  background-color: #633db0;
}

#results-container {
  display: none;
  text-align: center;
}

#result-chart {
  margin: 20px auto;
  width: 80%;
  height: 400px;
}

.question-set {
  margin-bottom: 20px;
}

.question-set h4 {
  margin-bottom: 10px;
  text-align: left;
}

.question-set .options {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap; 
}

.question-set label {
  display: flex;
  align-items: center;
  margin-right: 10px;
  margin-bottom: 10px; 
}
footer {
  text-align: center;
  margin-top: 20px;
  font-size: 14px;
  color: #555;
}

footer p {
  margin: 0;
}
